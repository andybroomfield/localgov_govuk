{#
/**
 * @file
 * Default theme implementation for a three column layout.
 *
 * This template provides a three column 33%-34%-33% display layout, with
 * additional areas for the top and the bottom.
 *
 * Available variables:
 * - in_preview: Whether the plugin is being rendered in preview mode.
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'layout',
    'layout--threecol-33-34-33',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.top %}
      <div class="govuk-grid-row">
        <div {{ region_attributes.top.addClass('layout__region', 'layout__region--top', 'govuk-grid-column-full') }}>
          {{ content.top }}
        </div>
      </div>
    {% endif %}

    {% if content.first or content.second or content.third %}
      <div class="govuk-grid-row">
        {% if content.first %}
          <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first', 'govuk-grid-column-one-third') }}>
            {{ content.first }}
          </div>
        {% endif %}

        {% if content.second %}
          <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second', 'govuk-grid-column-one-third') }}>
            {{ content.second }}
          </div>
        {% endif %}

        {% if content.third %}
          <div {{ region_attributes.third.addClass('layout__region', 'layout__region--third', 'govuk-grid-column-one-third') }}>
            {{ content.third }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if content.bottom %}
      <div class="govuk-grid-row">
        <div {{ region_attributes.bottom.addClass('layout__region', 'layout__region--bottom', 'govuk-grid-column-full') }}>
          {{ content.bottom }}
        </div>
      </div>
    {% endif %}
  </div>
{% endif %}
